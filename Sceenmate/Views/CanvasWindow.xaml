<Window x:Class="Screenmate.Views.CanvasWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:gif="http://wpfanimatedgif.codeplex.com"
        xmlns:local="clr-namespace:Screenmate.Views"
        mc:Ignorable="d"
        Title="CanvasWindow" Height="450" Width="800"
        AllowsTransparency="True"
        WindowStyle="None"
        ResizeMode="NoResize"
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Topmost="True" Background="{x:Null}" Foreground="{x:Null}">

    <Canvas Name="MyCanvas" Focusable="True">
        <Image x:Name="Ron" Height="160" Margin="0,0,0,0" Width="120" gif:ImageBehavior.AnimatedSource="/Images/RonDown2.png" Tag="0" Canvas.Left="351" Canvas.Top="170"/>
    </Canvas>
</Window>
